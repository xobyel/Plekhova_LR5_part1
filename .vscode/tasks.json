{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Tests",
            "type": "shell",
            "command": "g++",
            "args": [
                "-I${workspaceFolder}/CUTE",
                "${workspaceFolder}/Plekhova_Test_MathTask.cpp",
                "${workspaceFolder}/Plekhova_MathTask.cpp",
                "-o",
                "${workspaceFolder}/tests.exe",
                "-g"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Building test executable"
        },
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "${workspaceFolder}/tests.exe",
            "dependsOn": ["Build Tests"],
            "group": "test",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        }
    ]
}